#!/usr/bin/env r

suppressMessages(library(docopt))
suppressMessages(library(rmarkdown))

## configure docopt
doc <- "Usage: render [--clean] [--quiet] [FILES ...]

-c --clean          remove temporary files when finished?  [default: TRUE]
-q --quiet          run in quiet mode? [default: FALSE]
-h --help           show this help text"



## Parse and apply rmarkdown::render with given options
opt <- docopt(doc)
sapply(opt$FILES, render, clean=opt$clean, quiet=opt$quiet)
